extends layout
block content
	nav.ui.secondary.pointing.top.fixed.menu#top-menu
		.left.menu
			if username
				a.ui.button(href="/game") Play Now
			else
				a.ui.button(href="/observe") Observe Now
		a.item(href="/") Home
		a.item(href="/rules") Rules
		a.item(href="/how-to-play") How to Play
		a.active.item About
		if username
			div.item.right
				a.right#logout(href="#", style="margin-right: 20px;") Logout
				a.right(href="/account")
					= username + '\'s account'
		else
			.right.menu
				.ui.buttons
					button.ui.button Sign In
					.or
					button.ui.positive.button Sign Up
	.ui.container.about-container
		.ui.text.container
			h1.ui.centered.header About One Night Werewolf Online
			h3.ui.header Front end
			p React, Redux, Sass, SemanticUI, jQuery, SocketIO.
			h3.ui.header Back end
			p NodeJS v6, Express, Pug, Passport, Mongodb with Mongoose, SocketIO.
			h3.ui.header Build
			p Gulp, Browserify, Babel (front end).
			p Application developed by #[a(href="//www.TwoLongOs.com") Chris Ozols] with CSS assistance by Christine Ozols.  Source code available for perusal at #[a(href="//github.com/cozuya/one-night-werewolf") github].  Bugs/issues?  Email chris.v.ozols at gmail.com or open an issue on github.
			h4.ui.header Version: 0.3.0 May xx, 2016
			h4.ui.header Release notes
			ul
				li Website implemented describing game and rules
				li Production build steps added to remove source maps, uglify, minify
				li Gamechats no longer vulnerable to xss..
				li Alpha test ready